<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/color_b1"
    >

    <ImageView
        android:id="@+id/imgSpeaker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_photo"
        />

    <View
        android:id="@+id/viewSpeaker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_item_speaker"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Nombre del Speaker"
            android:gravity="center_horizontal|bottom"
            android:textSize="12sp"
            android:lines="2"
            android:textStyle="bold"
            android:textColor="@color/color_w1" />

        <TextView
            android:id="@+id/txtDetailsSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:text="CompaÃ±ia del Speaker"
            android:lines="3"
            android:textSize="11sp"
            android:textColor="@color/color_w1" />
    </LinearLayout>

</RelativeLayout>
